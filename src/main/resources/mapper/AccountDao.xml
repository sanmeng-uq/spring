<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ch9.dao.AccountDao">

    <resultMap type="com.ch9.entity.Account" id="AccountMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="balance" column="balance" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AccountMap">
        select
          id, username, balance
        from account
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AccountMap">
        select
          id, username, balance
        from account
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="balance != null">
                and balance = #{balance}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from account
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="balance != null">
                and balance = #{balance}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into account(username, balance)
        values (#{username}, #{balance})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into account(username, balance)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.username}, #{entity.balance})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into account(username, balance)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.username}, #{entity.balance})
        </foreach>
        on duplicate key update
        username = values(username),
        balance = values(balance)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update account
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="balance != null">
                balance = #{balance},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from account where id = #{id}
    </delete>

<!--实现transfer功能-->
    <update id="transfer">
        update account
        <set>
            <if test="balance!=null">
                balance=balance+#{balance}
            </if>
        </set>
        where username = #{username}
    </update>

</mapper>

